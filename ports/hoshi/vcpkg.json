{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "hoshi",
    "version-semver": "0.0.1",
    "port-version": 1,
    "description": "A header-only localization library for C++ with powerful features and an extensible and easy-to-use translation formats.",
    "homepage": "https://www.gitlab.com/colorglass/hoshi",
    "license": "Apache-2.0",
    "dependencies": [
        "articuno",
        "gluino"
    ],
    "features": {
        "tests": {
            "description": "Build and run the unit tests.",
            "dependencies": [
                "gtest"
            ]
        }
    },
    "default-features": []
}
